function patternExplode(s, p)
  local t = {}
  for p in string.gmatch(s, p) do
    table.insert(t, p)
  end
  return t
end

function join(t, d)
  local len = #t
  if len == 0 then
    return ""
  end
  if d == nil then
    d = ","
  end
  local string = t[1]
  for i = 2, len do
    string = string .. d .. t[i]
  end
  return string
end

